.container
  .row
    .cust-span-featured
    - @videos.each do |featureVideo|
      - @video = featureVideo
      .video.mtm.mbm
        .media.fill-width
          - if @video.video_type == "Youtube"
            == <iframe width="1000" height="562" src="http://www.youtube.com/embed/#{@video.share_code}" frameborder="0" allowfullscreen></iframe>
          - else
            == <iframe src="http://player.vimeo.com/video/#{@video.share_code}" width="1000" height="562" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
        .full-caption.fill-width
          %h2.titles.tk-futura-pt-condensed #{@video.title}
          %span #{simple_format(@video.caption)}
        .buttons.fill-width.tk-futura-pt-condensed
          = link_to "İndir - yakında", "#"


